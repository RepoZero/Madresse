<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ir.madresse.UI.Home"
    tools:showIn="@layout/app_bar_home"

    android:gravity="center"
    android:background="#f4f4f4">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="#fff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/circle_home_page"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Home_Img_Library"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                custom:srcCompat="@drawable/library"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:orientation="vertical"
            android:gravity="center"
            tools:ignore="UnusedAttribute">

            <TextView
                android:id="@+id/Home_Txt_Library"
                style="@style/Txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="کتابخانه"
                android:textColor="#767676"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:background="#fff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/circle_home_page"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Home_Img_SampleQuestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                custom:srcCompat="@drawable/sample_questions"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:orientation="vertical"
            android:gravity="center"
            tools:ignore="UnusedAttribute">

            <TextView
                android:id="@+id/Home_Txt_SampleQuestion"
                style="@style/Txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="نمونه سوال"
                android:textColor="#767676"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_home_page"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <ImageView
                android:id="@+id/Home_Img_EducationEvents"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                custom:srcCompat="@drawable/education_events"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:orientation="vertical"
            android:gravity="center"
            tools:ignore="UnusedAttribute">

            <TextView
                android:id="@+id/Home_Txt_EducationEvents"
                style="@style/Txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="رویداد های تحصیلی"
                android:textColor="#767676"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
